# ===========================================
# Configuration ClaimCompass - VPS
# ===========================================

# Environnement
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ===========================================
# BASE DE DONNÉES
# ===========================================

# PostgreSQL local sur VPS (RECOMMANDÉ)
# Généré automatiquement par setup-postgresql.sh
DATABASE_URL=postgresql://claimcompass:your-generated-password@localhost:5432/claimcompass

# Alternative: Neon Database (PostgreSQL serverless)
# Obtenez ces informations depuis votre dashboard Neon
# DATABASE_URL=postgresql://username:password@ep-xxxxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# ===========================================
# AUTHENTIFICATION
# ===========================================

# JWT Secret (générez une clé forte)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# JWT Refresh Secret
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-this-in-production

# Durée de vie des tokens (en secondes)
JWT_EXPIRES_IN=900
JWT_REFRESH_EXPIRES_IN=2592000

# ===========================================
# EMAIL (SendGrid)
# ===========================================

# SendGrid API Key
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email de l'expéditeur
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=ClaimCompass

# ===========================================
# PAIEMENTS (Stripe)
# ===========================================

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Webhook secret (pour les webhooks Stripe)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# UPLOAD & STOCKAGE
# ===========================================

# Dossier des uploads (chemin absolu)
UPLOAD_DIR=/var/www/claimcompass/uploads

# Taille maximale des fichiers (en bytes)
MAX_FILE_SIZE=10485760

# Types de fichiers autorisés
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ===========================================
# SÉCURITÉ
# ===========================================

# CORS - Domaines autorisés (séparés par des virgules)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# MONITORING & LOGS
# ===========================================

# Niveau de log (error, warn, info, debug)
LOG_LEVEL=info

# Sentry DSN (optionnel - pour le monitoring d'erreurs)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# APIS EXTERNES
# ===========================================

# APIs de données de vol (optionnel)
# FLIGHTAWARE_API_KEY=your-flightaware-key
# AVIATIONSTACK_API_KEY=your-aviationstack-key
# AERODATABOX_API_KEY=your-aerodatabox-key

# ===========================================
# CONFIGURATION VPS
# ===========================================

# Nom de l'application
APP_NAME=claimcompass

# Utilisateur système
APP_USER=www-data

# Groupe système
APP_GROUP=www-data

# ===========================================
# CONFIGURATION SSL (Let's Encrypt)
# ===========================================

# Domaine principal
DOMAIN=yourdomain.com

# Email pour Let's Encrypt
LETSENCRYPT_EMAIL=admin@yourdomain.com

# ===========================================
# CONFIGURATION REDIS (optionnel)
# ===========================================

# Redis pour le cache (optionnel)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# ===========================================
# CONFIGURATION BACKUP
# ===========================================

# Dossier de sauvegarde
BACKUP_DIR=/var/backups/claimcompass

# Rétention des sauvegardes (en jours)
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURATION DÉVELOPPEMENT
# ===========================================

# Uniquement pour le développement
# DEBUG=claimcompass:*
# VERBOSE_LOGGING=true
